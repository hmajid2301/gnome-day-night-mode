#!/bin/bash
# postinst script for gnome-day-night-mode
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see https://www.debian.org/doc/debian-policy/ or
# the debian-policy package


. /usr/share/debconf/confmodule
case "$1" in
    configure)

        db_get gnome-day-night-mode/user
        user=$RET
        db_get gnome-day-night-mode/location
        location=$RET
        db_get gnome-day-night-mode/day_mode_theme
        day_mode_theme=$RET
        db_get gnome-day-night-mode/night_mode_theme
        night_mode_theme=$RET
        db_get gnome-day-night-mode/day_mode_wallpaper
        day_mode_wallpaper=$RET
        db_get gnome-day-night-mode/night_mode_wallpaper
        night_mode_wallpaper=$RET

        chmod -R 744 /usr/share/gnome-day-night-mode
        chown -R haseeb /usr/share/gnome-day-night-mode/
        cd /usr/share/gnome-day-night-mode

        if ! [ -x "$(which solunar)" ]; then
            echo "solunar doesn't exist."
            echo "Installing solunar."
            git clone https://github.com/kevinboone/solunar_cmdline.git
            cd solunar_cmdline
            make
            make install
            cd ..
            rm -r solunar_cmdline
        fi

        (crontab -l -u $user ; echo "*/5 * * * * /usr/share/gnome-day-night-mode/day-night-cycle") | crontab -u $user -
        (crontab -l -u $user ; echo "@reboot /usr/share/gnome-day-night-mode/day-night-cycle") | crontab -u $user -

        echo "/usr/bin/solunar -c ${location} --syslocal | grep 'Sunrise\|Sunset' | grep -Eo '[0-9]' | tr -d '\n' | grep -Eo '[0-9]{4,4}" >> find-twilight

        echo "/usr/bin/gsettings set org.gnome.shell.extensions.user-theme name ${day_mode_theme}" >> day-mode
        echo "/usr/bin/gsettings set org.gnome.desktop.interface gtk-theme ${day_mode_theme}" >> day-mode
        echo "/usr/bin/gsettings set org.gnome.desktop.background picture-uri 'file://${day_mode_wallpaper}" >> day-mode

        echo "/usr/bin/gsettings set org.gnome.shell.extensions.user-theme name ${night_mode_theme}" >> night-mode
        echo "/usr/bin/gsettings set org.gnome.desktop.interface gtk-theme ${night_mode_theme}" >> night-mode
        echo "/usr/bin/gsettings set org.gnome.desktop.background picture-uri 'file://${night_mode_wallpaper}" >> night-mode

        db_stop

    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
